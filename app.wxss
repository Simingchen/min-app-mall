page { 
    font-size: 28rpx; 
    line-height: 1.5;
    color: #212121;
    background-color: #f5f5f5; 
    font-family: "Helvetica Neue", Helvetica, sans-serif;
}
page, view, input, text, form, navigator, rich-text, picker, scroll-view, cover-view, open-data { box-sizing: border-box; }
button{
    color:#333;
    background-color:transparent!important;
}
.ofh{
    overflow: hidden;
}
/* float */
.fl{float:left;}
.fr{float:right;}
.dpn{display:none;}
.clearfix:after{content: ".";display: block;height: 0; clear: both;visibility: hidden;}
.cf6{color:#f6819c}
.bgf{
    background: #fff;
}
.tac{
    text-align: center;
}
.tar{
    text-align: right;
}
.b{
    font-weight: 600;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
    display:none;
}
button:after{
    border:0;
}
.btn{
    width:600rpx;
    height:75rpx;
    margin:0 auto;
    border: 1px solid #f8babd;
    border-radius: 75rpx;
    padding:0 50rpx;
    line-height:75rpx;
    margin-bottom:45rpx;
    font-size: 26rpx;
    color:#fff;
    background-image: linear-gradient(90deg,#f9b7b9,#faccbf);
}
.flex-box{
    display: flex;
}
.flex-box.between{
    -webkit-justify-content: space-between;
    -moz-justify-content: space-between;
    justify-content: space-between;
}
.flex-item{
    flex:1;
}
.footer-box{
    height:100rpx;
}
/* // 单双行换行 */
.ellipsis{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.ellipsis2{
    overflow:hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.mark{
    position: absolute;
    top:0;
    right:0;
    bottom:0;
    left:0;
    background: rgba(0,0,0,.5);
    -webkit-transition: opacity .3s;
    transition: opacity .3s;
}