page{
    background: #f4f4f4;
    padding-bottom:40rpx;
}
.hr28{
    height:100rpx;
}
.header{
    position: fixed;
    width:100%;
    height:100rpx;
    top:0;
    left:0;
    padding-top:15rpx;
    font-size: 24rpx;
    color:#fff;
    text-align: center;
    background-image: linear-gradient(90deg,#f7bab5,#f68ea7);
    z-index: 10;
}
.header image{
    display: block;
    width:40rpx;
    height:40rpx;
    margin:0 auto 5rpx;
}
.header .on text{
    padding-bottom:6rpx;
    border-bottom:5rpx solid #fff;
}
.banner image{
    width:750rpx;
    height:335rpx;
}
.live-items{
    padding-left:6rpx;
}
.live-item{
    float:left;
    position: relative;
  width:345rpx;
  height:345rpx;
  margin-top:16rpx;
  margin-left:16rpx;
  border-radius: 17rpx;
  color:#fff;
  overflow: hidden;
}
.live-bg{
    width:345rpx;
    height:345rpx;
    background: url(http://wx.honghuo777.com/templates/HongHuo-Web/image/load-goods-img.jpg) center center no-repeat;
    background-size:100%;
}
.live-item .con{
    position: absolute;
    width:100%;
    height: 100%;
    top:0;
    left:0;
    padding-left:20rpx;
    padding-top:20rpx;
}
.live-img{
    float:left;
    width:60rpx;
    height:60rpx;
    margin-right:12rpx;
    border-radius: 60rpx;
}
.live-name{
    line-height: 60rpx;
    font-size: 23rpx;
}
.live-bottom{
    margin-top:160rpx;
}
.live-tit{
    width:265rpx;
    font-size: 26rpx;
    line-height: 56rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.live-bar{
    box-sizing: border-box;
    font-size: 20rpx;
    width:215rpx;
    height:33rpx;
    padding-right:16rpx;
    line-height: 33rpx;
    background: rgba(0,0,0,.5);
    border-radius: 33rpx;
    text-align: right;
    overflow: hidden;
}
.ico{
    float:left;
    position:relative;
    width:96rpx;
    height:33rpx;
    text-indent:20rpx;
    text-align: left;
    line-height: 33rpx;
    font-size: 22rpx;
    border-radius: 33rpx;
    background-image: linear-gradient(90deg,#f7bab5,#f68ea7);
}
.ico:before{
    position:absolute;
    content:"";
    width:10rpx;
    height:10rpx;
    top:12rpx;
    left:7rpx;
    background:#fff;
    border-radius: 10rpx;
}
.live-heart{
    width:30rpx;
    height:25rpx;
}
.live-like{
    margin-top:20rpx;
    margin-right:22rpx;
    text-align: center;
}
.fans{
    font-size: 15rpx;
}
.empty{
    text-align: center;
    color:#ccc;
    line-height: 72rpx;
    font-size: 22rpx;
}