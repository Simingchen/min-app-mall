page{
    background: #fff;
}
.scroll{
    position: absolute;
    width: 100%;
    height: 100%;
}
.item{
    position: relative;
    padding:30rpx;
    height:180rpx;
    border-bottom:2rpx solid #f5f5f5;
}
.avator{
    width: 65rpx;
    height:65rpx;
    margin-right: 20rpx;
    border-radius: 65rpx;
    background: #f5f5f5;
}
.name{
    color:#f6819e;
    line-height: 65rpx;
}
.talk{
    color:#000;
}
.time{
    position: absolute;
    right:30rpx;
    top:52rpx;
    color:#999;
}
.send-box{
    position: fixed;
    left:0;
    bottom:0;
    width:100%;
    height:90rpx;
    padding-top:18rpx;
    padding-left:30rpx;
    padding-right:30rpx;
    background: #fff;
    box-shadow: 0 0 12px 1px #dedede;
    z-index: 10;
}
.hr28{
    height:90rpx;
}
.send{
    width:116rpx;
    height:60rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
