.search-input {
    border-bottom: 1rpx solid #f4f4f4;
    padding: 15rpx 35rpx;
    position: relative;
    border-top: 1rpx solid #f4f4f4;
    background: #fff;
}
.search-input .input{
   background: #f3f5f9 url(data:image/jpg;base64,)  22rpx center no-repeat;
   height: 56rpx;
    line-height: 56rpx;
   background-size: 30rpx 30rpx;
   padding-left: 65rpx;
}
.search-input input {
    height: 56rpx;
    line-height: 56rpx;
    width: 615rpx;
    background: transparent;
}
.search-cond{
    background: #fff;
}
.search-cond .title {
    position: relative;
    height: 84rpx;
}

.search-cond .title .line {
    height: 2rpx;
    background: #999;
    width: 396rpx;
    position: absolute;
    top: 42rpx;
    left: 50%;
    transform: translate(-50%);
}

.search-cond .title .txt {
    position: absolute;
    left: 50%;
    top: 50%;
    background: #fff;
    width: 230rpx;
    transform: translate(-50%,-50%);
    padding-left: 20rpx;
    color: #999;
}

.search-cond .search-cont {
    padding: 0 35rpx;
    overflow: hidden;
}

.search-cond .search-cont .item {
    position:relative;
    float: left;
    color: #f6819e;
    border: 1rpx solid #f6819e;
    height: 50rpx;
    padding:0 22rpx;
    text-align: center;
    margin: 0 8rpx 20rpx 0;
    border-radius: 27rpx;
    font-size: 25rpx;
    line-height: 50rpx;
    background: #ffffff;
}

.search-his .title {
    font-size: 25rpx;
    color: #666;
    padding-left: 35rpx;
    height: 70rpx;
    line-height: 70rpx;
    background: #f4f4f4;
}

.search-his .list .list-box {
    border-bottom: 1rpx solid #e4e4e4;
    padding: 25rpx 35rpx;
    overflow: hidden;
    background: #fff;
}

.search-his .list .list-box image {
    width: 25rpx;
    height: 25rpx;
    float: left;
    margin: 7rpx 15rpx 0 0;
}

.search-his .list .list-box view {
    font-size: 29rpx;
    color: #999;
    line-height: 35rpx;
    float: left;
}
