/* pages/center/editMsg/editMsg.wxss */
page{
    background: #f4f4f4;
}
.lh100{
    line-height: 100rpx;
}
.line-item{
    background: #fff;
    border-top:1rpx solid #f4f4f4;
    padding-left:35rpx;
    padding-right:65rpx;
    color:#666;
    line-height: 100rpx;
    font-size: 27rpx;
}
.line-item.arrow{
    position:relative;
}
.line-item.arrow:before{
     position:absolute; 
    content:"";
    right:33rpx;
    top:45rpx;
    width:15rpx;
    height:15rpx;
    border-top:3rpx solid #666;
    border-right:3rpx solid #666;
    transform: rotate(45deg);
}
.line-item .lab{
    float:left;
    line-height: 100rpx;
    height: 100rpx;
    color:#000;
}
.picker{
    line-height: 100rpx;
}
.flex-box{
    display: flex;
}
.flex-box .flex-item{
    flex:1;
}
.flex-box .lab{
    flex:1;
}
.flex-box input{
    text-align: right;
    flex:1;
    height:100rpx;
    line-height: 100rpx; 
}
.textarea{
    padding:10rpx;
    padding-top:30rpx;
    height:210rpx;
    line-height: 36rpx;
}
.last-line{
    margin-top:23rpx;
}
.form-checkbox {
    border-radius: 100%;
    display: block;
    margin-top:35rpx;
    margin-right:15rpx;
    width: 30rpx;
    height: 30rpx;
    background-image: url(data:image/jpg;base64,);
    background-repeat: no-repeat;
    background-size: 100%;
}

.form-checkbox.checked {
    background-image: url(data:image/jpg;base64,);
}
.addNew {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 83rpx;
    text-align: center;
    line-height: 83rpx;
    color: #fff;
    background-image: linear-gradient(90deg, #f69db1, #faccbf);
    font-size: 26rpx;
    z-index: 5;
    border: 0;
    margin: 0 auto;
    border-radius: 0;
}

.hr22 {
    line-height: 83rpx;
}