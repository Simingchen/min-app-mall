}
.title{
    padding-left:40rpx;
    font-size: 30rpx;
    line-height: 72rpx;
    border-bottom:1px solid #f4f4f4;
}
.bor-bottom{
    border-bottom:1px solid #f4f4f4;
}
.icon-box{
    height:150rpx;
    text-align: center;
    font-size: 26rpx;

}
.icon-box .img{
    display: block;
    width:50rpx;
    height:47rpx;
    margin: 35rpx auto 15rpx;
}
.live{
    margin-bottom:130rpx;
}
.wuliu-item{
    padding:20rpx 35rpx;
    font-size: 19rpx;
    color:#9a9a9a;
}
.wuliu-item .time{
    position:relative;
    float:left;
    min-height:60rpx;
    padding-right:30rpx;
    border-right:1rpx solid #ccc;
}
.wuliu-item .time:after{
    position:absolute;
    content:"";
    top:50%;
    right:-5rpx;
    width:10rpx;
    height:10rpx;
    border-radius: 10rpx;
    background:#ccc;
    transform: translate(0,-50%);
}
.wuliu-item .img{
    width:60rpx;
    height:60rpx;
}
.wuliu-item .tit{
    color:#f880a3;
    font-size: 24rpx;
}
.popup .con{
    position: fixed;
    width:545rpx;
    height:720rpx;
    left:50%;
    top:50%;
    z-index: 101;
    background:  #fff;
    border-radius: 8rpx;
    transform: translate(-50%,-50%);
    -webkit-transition-duration: .3s;
    transition-duration: .3s;
    transform-origin: 50% 50%;
    opacity:1;
    display: block;
}
.popup.popup-enter .con,
.popup.popup-leave .con{
    opacity:0;
    display: none;
}
.popup.popup-enter .mark{
    opacity: 0;
}
.mark{
    z-index: 100;
}
.qrcode{
    display: block;
    width:470rpx;
    height:470rpx;
    margin:40rpx auto;
}
.code-txt{
    width:300rpx;
    margin:70rpx auto;
    font-size: 28rpx;
    line-height: 50rpx;
}
.popup .close{
    position:absolute;
    width:88rpx;
    height:88rpx;
    left:50%;
    bottom:-125rpx;
    transform: translate(-50%);
}