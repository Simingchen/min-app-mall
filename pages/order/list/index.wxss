page{
    background: #f4f4f4;
}

.orderList-page .goods-li {
  margin-bottom: 8rpx;
  background-color: #fff;
}
.orderList-page .goods-li .li-bot {
  height: 1.5rem;
  font-size: 0.7rem;
  line-height: 1.5rem;
}
.orderList-page .goods-li .li-bot view {
  float: right;
  margin-right: 0.5rem;
}
.orderList-page .state-li {
    height:78rpx;
    padding-left:27rpx;
    line-height: 78rpx;
    color:#999;
    border-bottom:1rpx solid #f4f4f4;
}
.li-bot{
    line-height: 74rpx;
    border-bottom:1rpx solid #f4f4f4;
}
.btns-line{
    padding-right:10rpx;
}
.orderList-page .delete-btn {
  position: relative;
  display: block;
  float: right;
  width: 148rpx;
  height: 46rpx;
  margin-right: 17rpx;
  margin-top:14rpx;
  margin-bottom:14rpx;
  text-align: center;
  border: 1rpx solid #f6a2b2;
  line-height: 46rpx;
  font-size: 24rpx;
  border-radius: 46rpx;
  color:#f6819e;
}
.orderList-page .delete-btn.cancle{
    color:#999;
    background: #dddddd;
    border-color: #dddddd;
}

.goodsItem {
    position: relative;
    display: flex;
    margin-bottom: .25rem;
    background-color: #fff;
    border:1rpx solid #f4f4f4;
    padding-top:33rpx;
    padding-bottom:35rpx;
    padding-left:26px;
}

.goodsItem .tit {
    width:365rpx;
    height: 63rpx;
    line-height: 30rpx;
    color:#000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical
}

.goodsItem .img {
    width: 160rpx;
    height: 160rpx;
    border:1rpx solid #f4f4f4;
    border-radius: 6rpx;
}

.goodsItem .con {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 0 .5rem;
    overflow: hidden
}

.goodsItem .price-li {
    position: absolute;
    top:38rpx;
    right:32rpx;
    font-size: 24rpx;
}

.goodsItem .price-li .price {
    line-height: .8rem;
    /* font-weight: 700; */
    color: #f6819e;
}

.goodsItem .price-li .market-price {
    font-size: 24rpx;
    line-height: .8rem;
    color: #999;
    text-decoration: line-through;
}

.goodsItem .item-subtitle {
    margin-top:15rpx;
    color: #999;
    font-size: 24rpx;
    line-height: 35rpx;
}

.goodsItem .price-unit {
    font-size: 24rpx
}
.top-nav {
    position: fixed;
    top: 0;
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    z-index: 5;
    background: #fff;
    border-top:1rpx solid #e5e5e5;
    border-bottom:1rpx solid #e5e5e5;
    color:#000;
    font-size: 24rpx;
}

.top-nav .on {
    border-bottom: 2rpx solid #f8b3b8;
    color:#f87f9e;
}
.empty{
    position: fixed;
    z-index: 5000;
    width: 100%;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    text-align: center;
}
.empty .txt {
    font-size: 32rpx;
    color: #797979;
    text-shadow: 3px 3px 18px #a7a7a7;
}

.top-box{
    margin-bottom:88rpx;
}