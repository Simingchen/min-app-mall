.popup .title{
    position:relative;
    text-align: center;
    line-height: 100rpx;
    border-bottom:1px solid #eee;
    font-size: 28rpx;
    font-weight: 600;
}
.popup .title .close{
    position:absolute;
    right:32rpx;
    top:39rpx;
    width:22rpx;
    height:22rpx;
}
.popup .con{
    left: 14rpx;
    right: 14rpx;
    position: fixed;
    bottom:0;
    z-index: 101;
    background:  #fff;
    -webkit-transition-duration: .3s;
    transition-duration: .3s;
    box-shadow: 0 0 40rpx 0px #dddddd;
    border-radius: 20rpx 20rpx 0 0;

}
.popup.popup-enter .con,
.popup.popup-leave .con{
    transform: translate3d(0, 110%, 0);
}
.popup.popup-enter .mark{
    opacity: 0;
}
