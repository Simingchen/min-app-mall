page {
    background: #f4f4f4;
}

.order-page .addr-msg .ofh {
    padding-bottom: 20px;
}

.order-page .addr-msg .addr-select-box {
    margin: 0;
}

.order-page .addr-msg .addr-detail {
    font-size: 12px;
    color: #999;
}

.order-page .addr-msg .addNew {
    padding-left: 0.75rem;
}

.order-page .addr-li {
    padding-right:110rpx;
    font-size: 32rpx;
    color:#000;
    line-height: 64rpx;
}

.order-page .addr-li .addr-detail {
    line-height: 34rpx;
    color: #000;
    font-size: 28rpx;
}

.order-page .address-box {
    position: relative;
    padding-top: 15rpx;
    padding-left:78rpx;
    padding-bottom:40rpx;
    border-top:1rpx solid #f4f4f4;
    background: #fff url(data:image/jpg;base64,) 30rpx center no-repeat;
    background-size: 27rpx 35rpx;
}
.order-page .address-box:after{
    position:absolute;
    content:"";
    width:100%;
    bottom:0;
    left:0;
    height:8rpx;
    background-image: linear-gradient(90deg,#f69db1,#faccbf);
}

.order-page .leave-msg {
    display: flex;
}

.order-page .leave-msg textarea {
    flex: 1;
    border: 0;
    transition: height;
    vertical-align: top;
    height: 1.1rem;
}

.goodsItem {
    position: relative;
    display: flex;
    background-color: #fff;
    border: 1rpx solid #f4f4f4;
    padding-top: 33rpx;
    padding-bottom: 35rpx;
    padding-left: 26px;
}

.goodsItem .tit {
    width: 495rpx;
    height: 63rpx;
    line-height: 30rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goodsItem .img {
    width: 150rpx;
    height: 150rpx;
    border: 1rpx solid #e5e5e5;
}

.goodsItem .con {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 0 35rpx;
    overflow: hidden;
}

.goodsItem .price-li {
    position: absolute;
    bottom: 32rpx;
}

.goodsItem .price-li .price {
    line-height: 0.8rem;
    font-weight: 700;
    color: #f6819e;
}

.goodsItem .price-li .market-price {
    font-size: 24rpx;
    line-height: 0.8rem;
    color: #999;
    text-decoration: line-through;
}

.goodsItem .item-subtitle {
    margin-top: 15rpx;
    color: #999;
    font-size: 24rpx;
    line-height: 35rpx;
}
.goodsItem .item-subtitle .num{
    margin-top:15rpx;
    font-size: 28rpx;
}
.goodsItem .price-unit {
    font-size: 24rpx;
}
.order-state{
    height:110rpx;
    padding-top:15rpx;
    padding-left:37rpx;
    line-height: 42rpx;
    font-size: 24rpx;
    color:#666;
    box-sizing: border-box;
}
.pl10{
    padding-left:10rpx;
}
.bot{
    margin-top:11rpx;
    background: #fff;
    padding-left:28rpx;
    padding-right:28rpx;
    font-size: 28rpx;
}
.send-type{
    line-height: 76rpx;
    border-bottom:1rpx solid #f8f8f8;
}
.send-type .txt{
    margin-right:10rpx;
}
.leave-msg{
    min-height:155rpx;
    border-bottom:1rpx solid #f8f8f8;
    box-sizing: border-box;
    padding:25rpx 3rpx;
    line-height: 34rpx;
}
.total{
    float:right;
    line-height: 80rpx;
    font-size: 24rpx;
    color:#999;
}
.total .cf6{
    font-weight:500;
}
.hr75{
    height:75rpx;
}
.order-btn{
    position:fixed;
    width:100%;
    bottom:0;
    border-radius: 0;
    margin-bottom:0;
}